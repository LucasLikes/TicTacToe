<UserControl x:Class="JogoDaVelha.UI.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="400" Width="600">
    <Grid Background="#1E1E1E" Margin="20">
        <StackPanel>
            <!-- Indicação de vez -->
            <TextBlock Text="{Binding CurrentPlayerText}"
                   FontSize="20"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

            <!-- Tabuleiro 3x3 -->
            <UniformGrid Rows="3" Columns="3" Margin="0 0 0 20">
                <Button Content="{Binding Board[0]}" Command="{Binding PlayCommand}" CommandParameter="0" FontSize="24" />
                <Button Content="{Binding Board[1]}" Command="{Binding PlayCommand}" CommandParameter="1" FontSize="24" />
                <Button Content="{Binding Board[2]}" Command="{Binding PlayCommand}" CommandParameter="2" FontSize="24" />
                <Button Content="{Binding Board[3]}" Command="{Binding PlayCommand}" CommandParameter="3" FontSize="24" />
                <Button Content="{Binding Board[4]}" Command="{Binding PlayCommand}" CommandParameter="4" FontSize="24" />
                <Button Content="{Binding Board[5]}" Command="{Binding PlayCommand}" CommandParameter="5" FontSize="24" />
                <Button Content="{Binding Board[6]}" Command="{Binding PlayCommand}" CommandParameter="6" FontSize="24" />
                <Button Content="{Binding Board[7]}" Command="{Binding PlayCommand}" CommandParameter="7" FontSize="24" />
                <Button Content="{Binding Board[8]}" Command="{Binding PlayCommand}" CommandParameter="8" FontSize="24" />
            </UniformGrid>

            <!-- Botões de controle -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 10">
                <Button Content="Nova Partida" Command="{Binding NewGameCommand}" Width="120" Height="35"/>
                <Button Content="Voltar" Command="{Binding BackCommand}" Width="120" Height="35"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
