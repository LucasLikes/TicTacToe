<UserControl x:Class="JogoDaVelha.UI.Views.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="400" Width="600">
    <Grid Background="#2D2D30" Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Margin="0 0 0 10">
            <Button Content="Jogar PvP" Command="{Binding PlayPvpCommand}" Height="40" Margin="0 5"/>
            <Button Content="Jogar vs CPU (Facil)" Command="{Binding PlayCpuEasyCommand}" Height="40" Margin="0 5"/>
            <Button Content="Jogar vs CPU (Dificil)" Command="{Binding PlayCpuHardCommand}" Height="40" Margin="0 5"/>
            <Button Content="Ver Ranking" Command="{Binding OpenRankingCommand}" Height="40" Margin="0 5"/>
            <Button Content="Sair" Command="{Binding ExitCommand}" Height="40" Margin="0 5"/>
        </StackPanel>
    </Grid>
</UserControl>
