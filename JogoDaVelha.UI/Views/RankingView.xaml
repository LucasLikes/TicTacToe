<UserControl x:Class="JogoDaVelha.UI.Views.RankingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="400" Width="600">
    <Grid Background="#1E1E1E" Margin="20">
        <StackPanel>
            <TextBlock Text="Ranking" FontSize="24" Foreground="White" HorizontalAlignment="Center" Margin="0 0 0 20"/>

            <!-- Lista de jogadores -->
            <ListView ItemsSource="{Binding Rankings}" Height="250">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Jogador" DisplayMemberBinding="{Binding Player}" Width="200"/>
                        <GridViewColumn Header="Vitórias" DisplayMemberBinding="{Binding Wins}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Botão voltar -->
            <Button Content="Voltar" Command="{Binding BackCommand}" Width="120" Height="35" HorizontalAlignment="Center" Margin="0 20 0 0"/>
        </StackPanel>
    </Grid>
</UserControl>
